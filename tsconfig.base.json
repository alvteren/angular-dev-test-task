{
	"compileOnSave": false,
	"compilerOptions": {
		"paths": {
			"@bp/utils/state": ["libs/utils/state/src/index.ts"],
			"@bp/weather-forecast/const": ["libs/weather-forecast/const/src/index.ts"],
			"@bp/weather-forecast/data-access": ["libs/weather-forecast/data-access/src/index.ts"],
			"@bp/weather-forecast/shell": ["libs/weather-forecast/shell/src/index.ts"],
			"@bp/weather-forecast/ui": ["libs/weather-forecast/ui/src/index.ts"]
		},
		"baseUrl": ".",
		"rootDir": ".",
		"target": "es2015",
		"module": "es2020",
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018", "dom", "esnext", "esnext.asynciterable"],
		"types": ["node"],
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noEmitHelpers": true,
		"noLib": false,
		"strictNullChecks": true,
		"sourceMap": true,
		"inlineSourceMap": false,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noErrorTruncation": true
	},
	"angularCompilerOptions": {
		"annotateForClosureCompiler": false,
		"disableTypeScriptVersionCheck": true,
		"fullTemplateTypeCheck": true,
		"strictTemplates": true,
		"strictInputAccessModifiers": true,
		"strictInjectionParameters": true,
		"annotationsAs": "decorators"
	},
	"exclude": ["node_modules", "tmp", "dist"]
}
